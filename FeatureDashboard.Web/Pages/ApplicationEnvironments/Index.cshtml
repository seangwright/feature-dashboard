@page
@model ApplicationEnvironments.IndexModel

@{
    ViewData["Title"] = "Application Environments";
}

<h2>@ViewData["Title"]</h2>

<a asp-page="./Create">Create</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationEnvironments[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationEnvironments[0].IsProduction)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ApplicationEnvironments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsProduction)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
