@page
@model Applications.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Application.Name" class="control-label"></label>
                <input asp-for="Application.Name" class="form-control" />
                <span asp-validation-for="Application.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application.Url" class="control-label"></label>
                <input asp-for="Application.Url" class="form-control" />
                <span asp-validation-for="Application.Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application.ApplicationEnvironment" class="control-label"></label>
                <select asp-for="Application.ApplicationEnvironmentId" asp-items="@Model.ApplicationEnvironments" class="form-control">
                    <option>(Select One)</option>
                </select>
                <span asp-validation-for="Application.ApplicationEnvironment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
